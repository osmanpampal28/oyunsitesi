@model IEnumerable<EntityLayer.Concrete.Developer>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_ThemeLayout.cshtml";
}

<h1>Developer List's</h1>

<table class="table table-bordered table-danger">
    <tr>
        @*<th>ID</th>*@
        <th>Name of Company</th>
        <th>Logo</th>
        @*<th>Title</th>*@
        @*<th>Short About</th>
        <th>Mail</th>
        <th>Phone Number</th>*@
        <th colspan="3"></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            @*<td>@item.DeveloperId</td>*@
            <td>@item.DeveloperCompanyName</td>
            <td><figure class="author-figure mb-0 mr-3 float-left"><img style="height:210px" alt="Image" class="img-fluid rounded" src="@item.Logo" alt="Image" class="img-fluid"></figure></td>
            @*<td><a href="/Developers/Delete/@item.DeveloperId" class="btn btn-danger">Delete</a></td>
            <td><a href="/Developers/Edit/@item.DeveloperId" class="btn btn-success">Edit</a></td>
            <td><a href="/Developers/Details/@item.DeveloperId" class="btn btn-warning">Details</a></td>*@
        </tr>
    }
</table>
